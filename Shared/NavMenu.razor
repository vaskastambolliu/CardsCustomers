                    <NavLink class="nav-link" href="discounts">
                        <span class="oi oi-plus" aria-hidden="true"></span> Discounts
                    </NavLink>
                </div>

                <AuthorizeView Context="roles" Roles="Administrator">
                    <Authorized>
                        <div class="nav-item px-3">
                            <NavLink class="nav-link" href="usersroles">
                                <span class="oi oi-pulse" aria-hidden="true"></span> Roles
                            </NavLink>
                        </div>
                  
                    <div class="nav-item px-3">
